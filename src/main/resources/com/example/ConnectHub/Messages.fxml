                                <Insets />
                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="22.0" />
                            </font>
                        </Label>
                        <Label fx:id="MessageL" alignment="TOP_LEFT" prefHeight="27.0" prefWidth="356.0" text="Message" wrapText="true">
                            <font>
                                <Font name="TimeBurner Bold" size="18.0" />
